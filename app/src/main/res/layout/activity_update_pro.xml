<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePro"
    android:background="#7FFF00">


    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#DC143C"
        android:text="Cập nhật hồ sơ" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginEnd="45dp"
        android:background="#F0F8FF"
        android:hint="Lò Lừu Đạn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="103dp"
        android:text="Họ Tên :"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginEnd="45dp"
        android:background="#F0F8FF"
        android:hint="Multil level"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginEnd="45dp"
        android:background="#F0F8FF"
        android:hint="Không xác định"
        tools:ignore="RtlCompat" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginEnd="45dp"
        android:background="#F0F8FF"
        android:hint="luudantuno@gmail.com"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="160dp"
        android:text="Giới tính :"
        android:layout_alignLeft="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="226dp"
        android:text="Nghề nghiệp :"
        android:layout_alignLeft="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_centerVertical="true"
        android:text="Gmail"
        android:layout_alignLeft="@+id/textView7" />

    <Button
        android:id="@+id/btnUpdateProOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="212dp"
        android:layout_marginEnd="52dp"
        android:background="#FF7F50"
        android:text="Cập nhật"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp" />
</RelativeLayout>